doctype html
html(lang = 'en')
    include config.pug
    block variables
        - var title = title || '';

    head
        meta(charset = 'utf-8')
        meta(http-equiv = 'X-UA-Compatible', content = 'IE=edge')
        meta(name = 'viewport', content = 'width=device-width, initial-scale=1')
        meta(name = 'description', content = 'Advanced command-line style web-based (online) arbitrary precision calculator with mathematical, scientific, programming, utility functions and more')
        meta(name = 'theme-color', content = '#606060')

        title Cl Calc: #{title}

        link(rel = 'icon', type = 'image/png', href = 'clcalc-16.png', sizes = '16x16')
        link(rel = 'icon', type = 'image/png', href = 'clcalc-32.png', sizes = '32x32')
        link(rel = 'icon', type = 'image/png', href = 'clcalc-192.png', sizes = '192x192')
        link(rel = 'shortcut icon', type = 'image/png', href = 'clcalc-192.png', sizes = '192x192')
        link(rel = 'apple-touch-icon', type = 'image/png', href = 'clcalc-192.png', sizes = '192x192')
        link(rel = 'manifest', href = 'manifest.webmanifest')
        link(href = lib.bootstrap.css.url, integrity = lib.bootstrap.css.integrity, rel = 'stylesheet', type = 'text/css', crossorigin = 'anonymous')
        link(href = lib.robotofont.css.url, rel = 'stylesheet', type = 'text/css')
        script(src = lib.jquery.js.url, integrity = lib.jquery.js.integrity, crossorigin = 'anonymous')
        script(src = lib.bootstrap.js.url, integrity = lib.bootstrap.js.integrity, crossorigin = 'anonymous')

        block inject_head

        link(href = 'main.css', rel = 'stylesheet', type = 'text/css')

