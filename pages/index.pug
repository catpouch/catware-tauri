extends page.pug
block variables
    - var title = 'Online Command-Line Calculator';

block inject_head
    link(href = lib.jqueryterminal.css.url, integrity = lib.jqueryterminal.css.integrity, rel = 'stylesheet', type = 'text/css', crossorigin = 'anonymous')
    link(href = lib.katex.css.url, integrity = lib.katex.css.integrity, rel = 'stylesheet', type = 'text/css', crossorigin = 'anonymous')
    
    // Create link (expression or log) popower template
    script(type = 'text/html', id = 'template-create-link-popover')
        div.input-group
            input.form-control(type = 'text', readonly = 'true', value = '{link}')
            span.input-group-btn
                button.btn.btn-primary.copy-link-to-clipboard(type = 'button')
                    span.glyphicon.glyphicon-copy
                    | &nbsp;Copy
    
    // Create link (expression or log) popower template without 'Copy' button
    script(type = 'text/html', id = 'template-create-link-popover-no-copy')
        input.form-control(type = 'text', readonly = 'true', value = '{link}')
    
    // Create expression link button template
    script(type = 'text/html', id = 'template-create-expression-link-button')
        div(style = 'float: right')
            a.create-expression-link-button(href = 'javascript:void(0)', role = 'button')
                span.glyphicon.glyphicon-link

